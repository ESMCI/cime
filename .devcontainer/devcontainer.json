{
    "name": "CIME Development Container",
    "build": {
        "dockerfile": "../docker/Dockerfile",
        "context": "../docker",
        "target": "base"
    },
    "mounts": [
        "source=${localWorkspaceFolder}/..,target=/home/cime/model,type=bind,consistency=cached"
    ],
    "workspaceFolder": "/home/cime/model/cime",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-vscode.cpptools",
                "redhat.vscode-yaml",
                "eamodio.gitlens",
                "mhutchie.git-graph"
            ]
        }
    },
    "remoteUser": "vscode",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": "true",
            "installOhMyZsh": "true",
            "upgradePackages": "true",
            "username": "vscode"
        }
    }
}