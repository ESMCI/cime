{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build docs",
            "type": "shell",
            "command": "make html",
            "options": {
                "cwd": "${workspaceFolder}/doc"
            },
        },
        {
            "label": "Autobuild docs",
            "type": "shell",
            "command": "sphinx-autobuild --ignore '**/__pycache__' . ../build/html",
            "options": {
                "cwd": "${workspaceFolder}/doc/source"
            }
        }
    ]
}