{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Docker Build (base)",
            "type": "shell",
            "command": "docker build -t ghcr.io/esmci/cime:dev --target base .",
            "options": {
                "cwd": "${workspaceFolder}/docker"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Docker Run (base) - E3SM",
            "type": "shell",
            "command": "docker run -it --rm -v ${workspaceFolder}/..:/home/cime/model -e CIME_MODEL=e3sm -e USER_ID=`id -u` -e GROUP_ID=`id -g` ghcr.io/esmci/cime:dev bash",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
                {
            "label": "Docker Run (base) - CESM",
            "type": "shell",
            "command": "docker run -it --rm -v ${workspaceFolder}/..:/home/cime/model -e CIME_MODEL=cesm -e USER_ID=`id -u` -e GROUP_ID=`id -g` ghcr.io/esmci/cime:dev bash",
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
    ]
}