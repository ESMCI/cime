<?xml version="1.0" encoding="UTF-8"?>
<config_compilers version="2.0">
<!-- --> 

<compiler MACH="iridisX" COMPILER="gnu">
  <MPICC>mpicc</MPICC>
  <MPICXX>mpicxx</MPICXX>
  <MPIFC>mpifort</MPIFC>
  <!-- <NETCDF_PATH>$ENV{NETCDF}</NETCDF_PATH> -->
  <!-- <PNETCDF_PATH>$ENV{PNETCDF}</PNETCDF_PATH> -->
  <!-- ADD PNETCDF_PATH --> 
  <NETCDF_PATH>/home/jjs1u25/local/netcdf-c/install-gnu</NETCDF_PATH>
  <NETCDF_C_PATH>/home/jjs1u25/local/netcdf-c/install-gnu</NETCDF_C_PATH>
  <!--  <NETCDF_FORTRAN_PATH>/home/mjf1y25/local/netcdf-fortran/install</NETCDF_FORTRAN_PATH>  -->
  <NETCDF_FORTRAN_PATH>/home/jjs1u25/local/netcdf-fortran/install-gnu</NETCDF_FORTRAN_PATH>
  <MKLROOT>$ENV{MKLROOT}</MKLROOT>
  <HDF5_PATH>$ENV{HDF5_ROOT}</HDF5_PATH>
  <CFLAGS>
    <append DEBUG="FALSE"> -O3 </append>
  </CFLAGS>
  <SLIBS>
    <append> -L${NETCDF_C_PATH}/lib64 -lnetcdf </append>
    <append> -L${NETCDF_FORTRAN_PATH}/lib -lnetcdff </append>
    <append> -L${HDF5_PATH}/lib -lhdf5_hl -lhdf5 </append>
    <append>-lmkl_gf_lp64 -lmkl_sequential -lmkl_core -lpthread -lm -ldl</append>
  </SLIBS>
  <FFLAGS>
    <!-- Try -O2 optimization -->
    <append DEBUG="FALSE"> -O3 </append>
    <append> -fallow-argument-mismatch -fallow-invalid-boz </append>
  </FFLAGS>
  <LDFLAGS>
    <append>-Wl,-rpath,${NETCDF_C_PATH}/lib64</append>
    <append>-Wl,-rpath,${NETCDF_FORTRAN_PATH}/lib</append>
    <append>-m64 -L${MKLROOT}/lib -Wl,--no-as-needed</append>
    <!-- <append>-mkl</append> XX OPENBLAS? -->
  </LDFLAGS>
</compiler>

</config_compilers>
