
rm CMakeCache.txt
rm -rf CMakeFiles

ACMEDIR=/home/agsalin/ACME
NETCDFDIR=$SEMS_NETCDF_ROOT
HDF5DIR=$SEMS_HDF5_ROOT
PIODIR=/home/agsalin/install/pio1/pio
BUILDTYPE=None


cmake \
  -D CMAKE_VERBOSE_MAKEFILE=OFF \
  -D CMAKE_BUILD_TYPE=$BUILDTYPE \
  -D CMAKE_Fortran_COMPILER=mpif90 \
  -D CMAKE_C_COMPILER=mpicc \
  -D CMAKE_Fortran_FLAGS=-ffree-line-length-none \
\
  -D ACME_NETCDF_DIR=$NETCDFDIR \
  -D ACME_HDF5_DIR=$HDF5DIR \
  -D ACME_PIO_DIR=$PIODIR \
\
  -D ACME_CAM_PLEV=24 \
  -D ACME_CAM_SE_NP=4 \
  -D ACME_CAM_PHYSICS_CAM_PCOLS=4 \
  -D ACME_CAM_PHYSICS_CAM_PSUBCOLS=1 \
  -D ACME_CAM_PHYSICS_CAM_PCNST=25 \
\
  $ACMEDIR

