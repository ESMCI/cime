<?xml version="1.0"?>
<machine MACH="goldbach">
  <module_system type="module">
    <init_path lang="perl">/usr/share/Modules/init/perl.pm</init_path>
    <init_path lang="csh">/usr/share/Modules/init/csh</init_path>
    <init_path lang="sh">/usr/share/Modules/init/sh</init_path>
    <cmd_path lang="perl">/usr/bin/modulecmd perl</cmd_path>
    <cmd_path lang="sh">module</cmd_path>
    <cmd_path lang="csh">module</cmd_path>
    <modules>
      <purge/>
    </modules>
    <modules compiler="intel">
      <command name="load">compiler/intel/14.0.2</command>
    </modules>
    <modules compiler="pgi">
      <command name="load">compiler/pgi/14.10</command>
    </modules>
    <modules compiler="nag">
      <command name="load">compiler/nag/5.3.1-907</command>
    </modules>
    <modules compiler="gnu">
      <command name="load">compiler/gnu/4.4.7</command>
    </modules>
  </module_system>
  <environment_variables>
    <env name="P4_GLOBMEMSIZE">500000000</env>
    <env name="NETCDF_DIR">$NETCDF_PATH</env>
  </environment_variables>
</machine>
